{
    "name": "Go Dev Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "golang.go",
        "ms-azuretools.vscode-docker"
    ],
    "postCreateCommand": "go mod tidy",
    "forwardPorts": [
        8080
    ],
    "workspaceFolder": "/workspace",
    "remoteUser": "vscode"
}

